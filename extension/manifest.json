{
  "manifest_version": 3,
  "name": "Cloud Cost Optimizer",
  "version": "1.0.0",
  "description": "AI-powered cost optimization insights for Azure, AWS, and GCP resources",
  "author": "Microsoft Cloud FinOps Team",

  "permissions": [
    "storage",
    "identity",
    "activeTab"
  ],

  "host_permissions": [
    "https://portal.azure.com/*",
    "https://*.portal.azure.com/*",
    "https://console.aws.amazon.com/*",
    "https://*.console.aws.amazon.com/*",
    "https://console.cloud.google.com/*",
    "https://*.console.cloud.google.com/*",
    "http://localhost:8080/*",
    "http://localhost/*"
  ],

  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": [
        "https://portal.azure.com/*",
        "https://*.portal.azure.com/*"
      ],
      "js": ["src/content/azure-detector.js"],
      "css": ["styles/overlay.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://console.aws.amazon.com/*",
        "https://*.console.aws.amazon.com/*"
      ],
      "js": ["src/content/aws-detector.js"],
      "css": ["styles/overlay.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://console.cloud.google.com/*",
        "https://*.console.cloud.google.com/*"
      ],
      "js": ["src/content/gcp-detector.js"],
      "css": ["styles/overlay.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "file:///*test-page.html*",
        "http://localhost/*",
        "https://localhost/*"
      ],
      "js": ["src/content/azure-detector.js"],
      "css": ["styles/overlay.css"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    },
    "default_title": "Cloud Cost Optimizer"
  },

  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },

  "options_page": "src/popup/options.html",

  "web_accessible_resources": [
    {
      "resources": ["assets/*", "styles/*"],
      "matches": [
        "https://portal.azure.com/*",
        "https://console.aws.amazon.com/*",
        "https://console.cloud.google.com/*"
      ]
    }
  ]
}
